<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-12">
        <h2 align="center">Updating <%=@user.name%></h2>
        <%= form_for(@user) do |f| %>
            <div class="form-group">
                <textarea name="user[name]" class="form-control" placeholder="Name"><%=@user.name%></textarea>
                <textarea name="user[bio]" class="form-control" placeholder="Bio"><%=@user.bio%></textarea>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary"/>
        <% end %>
    </div>
</div>
